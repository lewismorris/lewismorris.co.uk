---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lewis Morris - Consultant Front End Engineer">
  <section
    class="flex min-h-screen flex-col justify-center gap-12 bg-gray-900 p-8"
  >
    <div
      class="container mx-auto flex flex-col items-center justify-center gap-16 md:flex-row md:gap-32"
    >
      <div class="flex max-w-xl flex-col items-start gap-8">
        <h1 class="text-5xl font-bold text-white">Hi, I'm Lewis Morris</h1>
        <p class="text-xl leading-relaxed text-white">
          Consultant Front End Engineer with 15 years experience, Founder of

          <a href="https://getkitted.co" class="underline hover:text-white/80"
            >KITTED</a
          >.
        </p>
        <a
          href="mailto:lewis@lewismorris.co.uk"
          class="flex w-auto gap-2 rounded-md bg-white px-4 py-2 font-mono text-gray-900 transition ease-linear hover:bg-white/80"
        >
          Get in touch
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
          </svg>
        </a>
      </div>
      <Image
        src="/images/me.jpg"
        format="avif"
        alt="Lewis Morris - Consultant Front End Engineer"
        width="380"
        height="380"
        class="aspect-square rounded-lg object-cover"
        loading="eager"
      />
    </div>
    <div class="flex justify-center gap-4">
      <a
        href="https://x.com/lewimorris"
        target="_blank"
        rel="noopener"
        title="Follow me on X"
      >
        <svg
          viewBox="0 0 24 24"
          class="h-6 w-6 text-white hover:opacity-80"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
          ><title>X</title><path
            d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
          ></path></svg
        >
      </a>
      <a
        href="https://bsky.app/profile/lewismorris.co.uk"
        target="_blank"
        rel="noopener"
        title="Follow me on Bluesky"
      >
        <svg
          width="28"
          height="24"
          viewBox="0 0 28 24"
          class="h-6 w-6 text-white hover:opacity-80"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <title>Bluesky</title>
          <path
            d="M5.89801 1.61263C9.01753 3.95462 12.3727 8.70328 13.6048 11.2514C14.8368 8.70328 18.192 3.95462 21.3116 1.61263C23.5624 -0.0772129 27.2096 -1.38474 27.2096 2.77588C27.2096 3.60678 26.7332 9.75612 26.4537 10.7545C25.4825 14.2253 21.9433 15.1106 18.7951 14.5748C24.2981 15.5114 25.6979 18.6137 22.6746 21.7159C16.9328 27.6078 14.4221 20.2377 13.7787 18.3492C13.6608 18.003 13.6056 17.841 13.6048 17.9787C13.604 17.841 13.5488 18.003 13.4309 18.3492C12.7875 20.2377 10.2767 27.6078 4.53493 21.7159C1.51165 18.6137 2.91151 15.5114 8.41452 14.5748C5.26625 15.1106 1.72711 14.2253 0.755823 10.7545C0.476419 9.75612 0 3.60678 0 2.77588C0 -1.38474 3.64716 -0.0772129 5.89801 1.61263Z"
