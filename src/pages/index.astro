---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lewis Morris - Consultant Front End Engineer">
  <section class="flex h-screen flex-col bg-gray-900">
    <div class="container flex items-center justify-center gap-32">
      <div class="flex max-w-xl flex-col items-start gap-8">
        <h1 class="text-5xl font-bold text-white">Hi, I'm Lewis Morris</h1>
        <p class="text-xl leading-relaxed text-white">
          Consultant Front End Engineer with over 10 years experience and
          organiser of <a
            class="underline hover:text-white/80"
            href="https://middlesbroughfe.co.uk"
            target="_blank">Middlesbrough Front End</a
          >
        </p>
        <a
          href="mailto:lewis@lewismorris.co.uk"
          class="flex w-auto gap-2 rounded-md bg-white px-4 py-2 font-mono text-gray-900 transition ease-linear hover:bg-white/80"
        >
          Get in touch
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
          </svg>
        </a>
      </div>
      <Image
        src="/images/lewismorris.jpg"
        alt="Lewis Morris - Consultant Front End Engineer"
        width="380"
        height="380"
        class="rounded-lg"
      />
    </div>
    <div class="mb-4 mt-auto flex justify-center gap-4">
      <a href="https://twitter.com/lewimorris" target="_blank" rel="noopener">
        <svg
          viewBox="0 0 24 24"
          class="h-6 w-6 text-white"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
          ><title>X</title><path
            d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
          ></path></svg
        >
      </a>
      <a
        href="https://www.linkedin.com/in/lewisjamesmorris/"
        target="_blank"
        rel="noopener"
      >
        <svg
          viewBox="0 0 24 24"
          class="h-6 w-6 text-white"
          fill="currentColor"
          xmlns="http://www.w3.org/2000/svg"
          ><title>LinkedIn</title><path
            d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
