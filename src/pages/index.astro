---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Lewis Morris - Consultant Front End Engineer">
  <section
    class="flex min-h-screen flex-col justify-center gap-12 bg-gray-900 p-8"
  >
    <div
      class="container mx-auto flex flex-col items-center justify-center gap-16 md:flex-row md:gap-32"
    >
      <div class="flex max-w-xl flex-col items-start gap-8">
        <h1 class="text-5xl font-bold text-white">Hi, I'm Lewis Morris</h1>
        <p class="text-xl leading-relaxed text-white">
          Consultant Front End Engineer with over 10 years experience and
          organiser of <a
            class="underline hover:text-white/80"
            href="https://middlesbroughfe.co.uk"
            target="_blank">Middlesbrough Front End</a
          >
        </p>
        <a
          href="mailto:lewis@lewismorris.co.uk"
          class="flex w-auto gap-2 rounded-md bg-white px-4 py-2 font-mono text-gray-900 transition ease-linear hover:bg-white/80"
        >
          Get in touch
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="h-6 w-6"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
          </svg>
        </a>
      </div>
      <Image
        src="/images/lewismorris.jpg"
        alt="Lewis Morris - Consultant Front End Engineer"
        width="380"
        height="380"
        class="rounded-lg"
      />
    </div>
    <div class="flex justify-center gap-4">
      <a
        href="https://x.com/lewimorris"
        target="_blank"
        rel="noopener"
        title="Follow me on X"
      >
