---
import Layout from "./Layout.astro";
import Prose from "../components/Prose.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;

// Format the date
const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${frontmatter.title} - Lewis Morris`}>
  <main class="w-full max-w-2xl mx-auto">
    <article class="space-y-4">
      <header>
        <h1 class="text-3xl font-medium">{frontmatter.title}</h1>
        <time datetime={frontmatter.date}>{formattedDate}</time>
      </header>
      <hr class="w-full border-neutral-200 dark:border-neutral-800" />
      <Prose>
        <slot />
      </Prose>
    </article>
  </main>
</Layout>

