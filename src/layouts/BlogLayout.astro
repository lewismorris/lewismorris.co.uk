---
import Layout from "./Layout.astro";
import Prose from "../components/Prose.astro";

interface Props {
  frontmatter: {
    title: string;
    date: string;
    description?: string;
  };
}

const { frontmatter } = Astro.props;

// Format the date
const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${frontmatter.title} | Lewis Morris`}>
  <main class="w-full max-w-2xl mx-auto">
    <a href="/" class="text-white/80 hover:text-white block mb-8 text-sm">&larr; Back to home</a>
    <article class="flex flex-col gap-4">
      <header class="flex flex-col gap-2">
        <h1 class="text-2xl font-medium text-white">{frontmatter.title}</h1>
        <time datetime={frontmatter.date} class="text-sm text-white/60">{formattedDate}</time>
      </header>
      <hr class="w-full border-white/20" />
      <Prose>
        <slot />
      </Prose>
    </article>
  </main>
</Layout>

