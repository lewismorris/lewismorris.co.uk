---
import '../styles/global.css';
import { ClientRouter } from "astro:transitions";
import Lightbox from '../components/Lightbox.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Coder. Builder. Maker. Helping teams ship fast, accessible and maintainable web apps."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="og:title" content={title ? `${title} - Lewis Morris` : 'Lewis Morris'} />
    <meta name="og:description" content="Coder. Builder. Maker. Helping teams ship fast, accessible and maintainable web apps." />
    <link rel="sitemap" type="application/xml" href="https://lewismorr.is/sitemap-index.xml" />
    
    <meta property="og:image" content="/og-image.png" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} - Lewis Morris` : 'Lewis Morris'}</title>

    <ClientRouter />
  </head>
  <body>
    <Lightbox />
    <slot />
  </body>
</html>
